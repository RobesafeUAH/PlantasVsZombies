public abstract class Personaje{

    private int vida;
    private String nombre;
    private int daño;
    
    public Personaje(int vida, String nombre, int daño){
        this.vida=vida;
        this.nombre=nombre;
        this.daño=daño;
    }

    public int getVida() {
        return vida;
    }

    public void setVida(int vida) {
        this.vida = vida;
    }

    public String getNombre() {
        return nombre;
    }

    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    public int getDaño() {
        return daño;
    }

    public void setDaño(int daño) {
        this.daño = daño;
    }
    public void recibirDaño(int daño){
        setVida(getVida()-daño);
    }
}

public abstract class Planta extends Personaje {
    private int coste;
    private int banco=50;
    
    public Planta(int vida, String nombre, int daño, int coste) {
        super(vida, nombre, daño);
        this.coste=coste;
    }
    public int getCoste() {
        return coste;
    }

    public void setCoste(int coste) {
        this.coste = coste;
    }

    public int getBanco() {
        return banco;
    }

    public void setBanco(int banco) {
        this.banco = banco;
    }

    //Métodos de daño
    public void disparar(int daño){
       /*if(rango){
        Zombie.recibirDaño(daño);
        }
        */
    }
    
    // Gestión de soles
    public  void ingreso(int soles){
        banco+= soles;
    }
    public void gasto(int soles){
        banco-=soles;
    }
    
}

public abstract class Girasol extends Planta {
    
    private int prod;
    
    // Girasol(1, "G", 0, 20, 10 CADA 2 CICLOS) ->2 ciclos= turno%2==0
    public Girasol(int vida, String nombre, int daño, int coste, int prod) {
        super(vida, nombre, daño, coste);
        this.prod=prod;
    }
    public void ingreso() {
        super.ingreso(prod); 
    }
   
    public void gasto(){
       super.gasto(getCoste());
   }
    public void recibirDaño(){
        
    }
}

public abstract class Lanzaguisantes extends Planta{

    //Lanzaguisantes(3, "L", 1, 50)
    public Lanzaguisantes(int vida, String nombre, int daño, int coste) {
        super(vida, nombre, daño, coste);
    }
    
    public void disparar(){
        super.disparar(getDaño());
    }
    public void gasto(){
        super.gasto(getCoste());
    }
    public void recibirDaño(){
        
    }
}

